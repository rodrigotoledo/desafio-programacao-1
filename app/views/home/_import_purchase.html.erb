<tr id="import_purchase_<%=import_purchase.id%>">
  <td><%=import_purchase.id%></td>
  <td><%=import_purchase.user.name%></td>
  <td id="import_purchase_lines_status_<%=import_purchase.id%>"><%= status_of_import_purchase(import_purchase.status) %></td>
  <td><%=import_purchase.import_file.original_filename%></td>
  <td id="import_purchase_lines_importeds_<%=import_purchase.id%>"><%=import_purchase.lines_importeds %></td>
  <td id="import_purchase_lines_with_success_<%=import_purchase.id%>"><%=link_to_unless(import_purchase.lines_with_success.nil?, import_purchase.lines_with_success, import_purchase_with_success_path(import_purchase)) %></td>
  <td id="import_purchase_lines_with_errors_<%=import_purchase.id%>"><%=link_to_unless(import_purchase.lines_with_errors.nil?, import_purchase.lines_with_errors, import_purchase_with_error_path(import_purchase)) %></td>
  <td id="import_purchase_lines_total_<%=import_purchase.id%>"><%=number_to_currency import_purchase.total.to_f %></td>
  <td><%=l import_purchase.created_at, format: :short %></td>
  <td><%=l import_purchase.updated_at, format: :short %></td>
</tr>
